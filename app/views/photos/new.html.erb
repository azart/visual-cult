        <small>20-100 <%= t('photo.cm') %></small>
      </div>
      <div class="span6">
        <%= label_tag 'price_one', t('photo.price') %>
        <%= text_field_tag 'price_one', nil, :maxlength => 64, :tabindex => 14, :class => 'span6' %>
        <small><%= t('photo.from') %> 1000р</small>
      </div>
    </div>
  </div>
  <div class="span6">
    <p><%= t('photo.help.help_seven') %></p>
  </div>
</div>

