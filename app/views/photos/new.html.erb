<div class="container">

<%= form_tag({:action => :create}, {:multipart => true, :id => 'add'}) do %>

<div class="row-fluid">
    <div class="span4">
      <h3>1: <%= t('photo.upload_miniature') %></h3>
      <%= file_field_tag :src_preview, :maxlength => 64, :tabindex => 1, :onchange => "readURL(this, 'mainImg')" %>
      <small><%= t('photo.miniature_param') %>.</small>
      <img id="mainImg" class="stretch"  alt="">

      <h3>2: <%= t('photo.two_part_of_origin') %></h3>

      <%= file_field_tag :miniature_one, :maxlength => 64, :tabindex => 2 %>
      <%= file_field_tag :miniature_two, :maxlength => 64, :tabindex => 3 %>

      <small><%= t('photo.parts_of_orign_params') %></small>
    </div>

    <div class="span8">
        <div class="row-fluid">
          <div class="span6"><h3>3: <%= t('photo.enter_required_parameters') %>:</h3></div>
          <div class="span6"><h3><%= t('photo.help.help') %></h3>
        </div>
    </div>

<div class="row-fluid">

  <div class="span6">
    <div class="row-fluid">
      <div class="span8">
        <label><%= t('photo.title') %></label>
        <%= text_field_tag :name, nil, :maxlength => 64, :tabindex => 4, :class => 'span12' %>
      </div>
      <div class="span4 lineForm">
        <label><%= t('photo.create_year') %></label>
        <%= select_year Date.today, {:field_name => 'date_create', :start_year => 1980, :end_year => Time.now.year} , {:tabindex=>5}  %>
      </div>
    </div>
  </div>

  <div class="span6">
    <p>
      <%= t('photo.help.help_one') %>.
    </p>
  </div>
</div>

<div class="row-fluid top-space">
  <div class="span6">
    <label><%= t('photo.gallery_name') %></label>
    <div class="row-fluid">
      <div class="span6 lineForm">
        <%= select "select", "gallery_id", Gallery.gallery_by_user_id(params[:user_id]).collect {|p| [p.name, p.id]}, {}, {:selected => params[:gallery_id], :tabindex => 6} %>
      </div>
      <div class="span6">
        <%= text_field_tag 'gallery_name', nil, :maxlength => 64, :tabindex => 7, :class => 'span12' %>
      </div>
    </div>

  </div>
  <div class="span6">
    <p>
        <%= t('photo.help.help_two') %>
    </p>
  </div>
</div>

<div class="row-fluid top-space">
  <div class="span6">
    <div class="row-fluid">
      <div class="span6">
        <label><%= t('city') %></label>
        <%= text_field_tag :city, nil, :maxlength => 64, :tabindex => 8, :class => 'span12' %>
      </div>

      <div class="span6 lineForm">
        <label><%= t('photo.for_sale') %></label>
        <%= select 'select', 'sell', [['Да', 1], ['Нет', 0]], {}, {:tabindex => 9} %>
      </div>
    </div>
  </div>
  <div class="span6">
    <p><%= t('photo.help.help_three') %>.</p>
  </div>
</div>

<div class="row-fluid top-space">
  <div class="span6">
    <label><%= t(:description) %></label>
        <%= text_area_tag 'description', nil, :size => "30x10", :class => "hight-middle", :tabindex => 10 %>
  </div>
  <div class="span6">
    <p><%= t('photo.help.help_four') %></p>
  </div>
</div>

<div class="row-fluid top-space">
  <div class="span12"><h3>4: <%= t('photo.enter_params_of_your_staff') %></h3></div>
</div>
<div class="row-fluid">
  <div class="span6">
    <label><%= t('photo.orign') %></label>
    <%= text_field_tag 'width', nil, :class => 'span3', :maxindex => 64, :tabindex => 11 %> *
    <%= text_field_tag 'height', nil, :class => 'span3', :maxindex => 64, :tabindex => 12 %>
    <small><%= t('photo.unit') %></small>
  </div>
  <div class="span6">
    <p><%= t('photo.help.help_five') %>.</p>
  </div>
</div>

<div class="row-fluid top-space">
  <div class="span6">
    <%= t('photo.options_img') %>:
    <a class="selected" href="javascript:void(0)" onclick="showLayer('a',this)">1</a>
    <a class="non-selected" href="javascript:void(0)" onclick="showLayer('b',this)">2</a>
    <a class="non-selected" href="javascript:void(0)" onclick="showLayer('c', this)">3</a>
  </div>
  <div class="span6">
    <p><%= t('photo.help.help_six') %></p>
  </div>
</div>

<div class="row-fluid top-space" id="dlayera">
  <div class="span6">
    <div class="row-fluid">
      <div class="span6">
        <%= label_tag 'size_one', t('photo.long_side') %>
